/* pages/user/user.wxss */
.top {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.chartBg{
   position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    width: 100%;
    height: 100%;
}
.userinfo {
  margin-top: 45rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.userinfo-nickname{
  margin-bottom: 10rpx;
}

.body{
  margin-top: 62rpx;
  height: 100%;
}
.txt{
  padding-top: 5rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 35rpx;
  color: #e8f8fb;
}
.box-img{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.img{  
  width: 280rpx;
  height: 280rpx;
}
.btn{
  background-color: #26d3f6;
}
.foot{
  color:#999;
  font-size:15px;
  text-align:center;
  display: flex;
  flex-direction: column;
}